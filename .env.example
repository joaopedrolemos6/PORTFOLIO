# Porta para o servidor Node.js
PORT=4000

# Defina uma senha forte para proteger o painel administrativo
ADMIN_PASSWORD=defina-uma-senha-segura

# Lista de origens permitidas para requisições (use vírgulas para múltiplas entradas)
CORS_ORIGINS=http://localhost:5173

# Tempo de vida (em minutos) para os tokens de autenticação do painel
TOKEN_TTL_MINUTES=120

# Configurações SMTP para envio do formulário de contato
SMTP_HOST=smtp.seuprovedor.com
SMTP_PORT=465
SMTP_USER=usuario@seuprovedor.com
SMTP_PASS=senha-super-secreta
CONTACT_RECIPIENT=seu-email@dominio.com
EMAIL_SUBJECT=Novo contato recebido pelo portfólio

# URL base usada pelo frontend para se conectar ao backend
# Exemplo para desenvolvimento local: http://localhost:4000
VITE_API_URL=http://localhost:4000
